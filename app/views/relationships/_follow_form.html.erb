<% unless current_user == user %>

<%# フォロー解除ボタン %>
    <% if current_user.following?(user) %>
<%= form_with model: @relationship, relationship_path, method: :delete, local: true do |f| %>
<%= f.hidden_field :follow_id, value: user.id %>
<%= f.sibmit "フォローを解除する" %>
          <% end %>

<%# フォローボタン %>
<% else %>
<%= form_with model: @relationship, relationship_path, local: true do |f| %>
<%= f.hidden_field :follow_id, value: user.id %>
<%= f.submit "フォロー" %>
        <% end %>
    <% end %>
<% end %>



<% if user_signed_in? %>
  <% if current_user.liked_by?(article.id) %>
    <%= link_to  destroy_favorite_path(article), method: :delete, remote: true do %>
      <p class="like-button"><i class="fas fa-heart fa-2x"></i><%= article.favorites.count %></p>
    <% end %>
  <% else %>
    <%= link_to create_favorite_path(article), method: :post, remote: true do %>
      <p class="like-button"><i class="far fa-heart fa-2x"></i><%= article.favorites.count %></p>
    <% end %>
  <% end %>
<% end %>
